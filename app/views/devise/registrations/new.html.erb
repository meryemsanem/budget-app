<div class="back-header">
 <a class="back-button" href="<%= categories_path %>">
    <img class="back-icon-white" src="<%= asset_path('back-white.png') %>" alt="back-icon">
  </a>
<h2 class="form-title">SIGN UP</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Full Name", class: "form-input" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-input" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "Password", class: "form-input" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "form-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", class: "form-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
